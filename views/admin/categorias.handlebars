<h2>Lista de Categorias:</h2>
<hr>
<a href="/categorias/add">
    <button class="btn btn-success">Nova Categoria</button>
</a>

{{#each categorias}}
    <div class="card mt-4">
        <div class="card-body">
            <h4>{{ nome }}</h4>
            <small>{{ slug }}</small><br>
            <small>{{ date }}</small>
            <a href="categorias/edit/{{_id}}"><br>
                <button class="btn btn-success mt-4">Editar Categoria</button>
            </a>
            <form action="categorias/deletar" method="post">
                <input type="hidden" name="id" value={{_id}}>
                <button type="submit" class="btn btn-danger mt-2">Deletar Categoria</button>
            </form>
        </div>
    </div>
{{else}}
    <h4 class="mt-3">Nenhuma categoria registrada!</h4>
{{/each}}