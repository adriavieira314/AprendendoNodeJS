{{#each error}}
    <div class="alert alert-danger">{{texto}}</div>
{{else}}

{{/each}}

<h3>Nova Postagem</h3>
<div class="card">
    <div class="card-body">
        <form action="/postagens/nova" method="POST">
            <label for="titulo">Título:</label>
            <input class="form-control" type="text" name="titulo" id="nome" placeholder="Nome da categoria">
            <label for="Slug">Slug:</label>
            <input class="form-control" type="text" name="slug" id="slug" placeholder="Slug da categoria">
            <label for="descricao">Descrição:</label>
            <input class="form-control" type="text" name="descricao" id="descricao">
            <label for="conteudo">Conteúdo:</label>
            <textarea class="form-control" name="conteudo"></textarea>
            <label for="categoria">Categoria:</label>
            <select name="categoria" class="custom-select">
                {{#each categorias}}
                    <option value={{_id}}>{{nome}}</option>
                {{else}}
                    <option value="0">Nenhuma categoria registrada.</option>
                {{/each}}
            </select>
            <button class="btn btn-success mt-3" type="submit">Criar Postagem</button>
        </form>
    </div>
</div>