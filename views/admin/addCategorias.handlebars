{{#each error}}
    <div class="alert alert-danger">{{texto}}</div>
{{else}}

{{/each}}

<h3>Nova Categoria</h3>
<div class="card">
    <div class="card-body">
        <form action="/categorias/nova" method="POST">
            <label for="nome">Nome:</label>
            <input class="form-control" type="text" name="nome" id="nome" placeholder="Nome da categoria">
            <label for="slug">Slug:</label>
            <input class="form-control" type="text" name="slug" id="slug" placeholder="Slug da categoria">
            <br>
            <button class="btn btn-success" type="submit">Criar categoria</button>
        </form>
    </div>
</div>