<h2>Lista de Postagens:</h2>
<hr>
<a href="/postagens/add">
    <button class="btn btn-success">Nova Postagem</button>
</a>

{{#each postagens}}
    <div class="card mt-4">
        <div class="card-body">
            <h4>{{ titulo }}</h4>
            <small>{{ slug }}</small><br>
            <small>{{ descricao }}</small><br>
            <small>{{ conteudo }}</small><br>
            <small>{{ categoria.nome }}</small><br>
            <small>{{ date }}</small>
            
            <a href="postagens/edit/{{_id}}"><br>
                <button class="btn btn-success mt-4">Editar Postagem</button>
            </a>
            <a href="postagens/deletar/{{_id}}"><br>
                <button type="submit" class="btn btn-danger mt-2">Deletar Postagem</button>
            </a>
        </div>
    </div>
{{else}}
    <h4 class="mt-3">Nenhuma postagem registrada!</h4>
{{/each}}